# ==========================================
# OUTFIT MATCHER SERVER CONFIGURATION
# ==========================================

# Basic Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://username:password@localhost:5432/outfit_matcher
# OR individual components:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=outfit_matcher
DB_USER=username
DB_PASSWORD=password

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_SECRET_REFRESH=your-super-secret-refresh-jwt-key-change-this-in-production

# ==========================================
# EMAIL CONFIGURATION
# Choose ONE email provider: sendgrid, smtp, or console
# ==========================================

# Email Provider Selection
EMAIL_PROVIDER=console  # Options: sendgrid, smtp, console

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourapp.com

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com

# General Email Settings
FROM_EMAIL=noreply@outfitmatcher.com
TEST_EMAIL=admin@yourapp.com  # For testing email configuration

# ==========================================
# AI SERVICES
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==========================================
# FILE STORAGE
# ==========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=outfit-matcher-images

# ==========================================
# REDIS (Optional - for advanced caching)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (in bytes)
MAX_FILE_SIZE=20971520  # 20MB
MAX_FILES_PER_REQUEST=5

# Session Security
SESSION_SECRET=your-session-secret-change-this

# ==========================================
# EXTERNAL APIs
# ==========================================
# Weather API (Open-Meteo is free, no key required)
WEATHER_API_URL=https://api.open-meteo.com/v1/forecast

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_REQUEST_LOGGING=true

# ==========================================
# PRODUCTION SECURITY
# ==========================================
# Content Security Policy
CSP_ENABLED=true
CORS_ORIGINS=http://localhost:5173,https://yourapp.com

# HTTPS Settings (for production)
FORCE_HTTPS=false
TRUST_PROXY=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Enable debug features
DEBUG_MODE=true
CREATE_DEFAULT_USER=true
DEFAULT_USER_EMAIL=demo@example.com
DEFAULT_USER_PASSWORD=password123